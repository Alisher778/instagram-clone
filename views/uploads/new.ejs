<% include ../template/header.ejs %>
<% include ../template/nav.ejs %>
<div class="container" id="uploads">
  <div class="col-md-8 col-md-offset-2">
    <form action="/images/upload" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <input class="form-control" type="file" name="image" multiple="true" required />
      </div>
      
      <div class="form-group">
        <input class="form-control" name="title" type="text" placeholder="Give a title" />
      </div>
      <div class="form-group">
        <textarea class="form-control" name="description" type="text" placeholder="Write discription" rows="3" maxlength="150"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary form-control" name="submit" type="submit">Upload</button>
      </div>
    </form>
  </div>
</div>

<% include ../template/footer.ejs%>

<style>
  #uploads{
    position: relative;
    top: 180px;
  }
</style>