<% include ../template/header.ejs %>
<% include ../template/nav.ejs %>
<div class="container">
  <% upload.forEach(function(upload){%>
  <div class="col-xs-12 col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      
      <div class="panel-body">
        <div class="info">
          <h4><%= upload.title%></h4>
          <p><%= upload.description%></p>
        </div>
        <span class="timeago"><%= upload.createdAt%></span>
      </div>
      
      <div class="panel-image">
        <img src="/images/uploads/<%= upload.image %>" class="img-fluid" alt="Responsive image" class="panel-image-preview" style="width: 100%; height: 100%"/>
      </div>
      
      <section>
        <div class="comments">
          <ul id="<%=upload.id%>"></ul>
        </div>
        <div>
          <form action="/comments/<%= upload.id%>/post" method="post" class="comment">
            <div id="formPosition">
              <img src="/images/like.png" alt=""/> <input type="text" name="comment" id="commentsForm" placeholder="Add a comment..." />
            </div>
          </form>
        </div>
      </section>
    
      <div class="panel-footer text-center">
        <ul class="more">
          <li>
            <a href="/images/<%=upload.image%>" title="Download"><span class="glyphicon glyphicon-download"></span></a>
          </li>
          <li title="Edit">
            <a href="/uploads/<%= upload.id %>" class="moreLinks"><span class="glyphicon glyphicon-pencil"></span></a>
          </li>
          <li title="Delete">
            <a href="/delete/<%= upload.image%>/<%= upload.id%>" class="moreLinks"><span class="glyphicon glyphicon-remove"></span></a>
          </li>
        </ul>
        
      <div id="<%=upload.id%>s"></div>
    </div>
  </div>
</div>
<%})%>
</div>
<% include ../template/footer.ejs%>